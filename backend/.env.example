# Environment Configuration Template
# Copy this to .env and update values for your environment

# Application
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Database
DATABASE_URL="postgresql://postgres:footballzone123@localhost:5432/footballzone"

# Redis Cache
REDIS_URL="redis://:redis123@localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR="./uploads"

# External Services (for later integration)
# Email
RESEND_API_KEY=""
FROM_EMAIL="noreply@footballzone.bg"

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# Stripe (for payments)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Analytics (optional)
GOOGLE_ANALYTICS_ID=""
