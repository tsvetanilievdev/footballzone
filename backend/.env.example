# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/footballzone_dev"
DATABASE_POOL_SIZE=10

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_TTL_DEFAULT=3600

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-change-this-in-production"
JWT_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# Stripe Payment
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Email Service (Resend)
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@footballzone.bg"
SUPPORT_EMAIL="support@footballzone.bg"

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# Features
ENABLE_ANALYTICS=true
ENABLE_NEWSLETTERS=true
MAX_FILE_SIZE=10485760

# CORS
FRONTEND_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,https://footballzone.bg"

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="your-session-secret-change-this"

# External APIs
GOOGLE_ANALYTICS_ID=""
FACEBOOK_PIXEL_ID=""